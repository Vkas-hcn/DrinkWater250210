<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="#000"
    android:orientation="vertical"
    android:fillViewport="true"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:backgroundTint="@color/white"
        android:background="@drawable/cor16"
        android:orientation="vertical"
        android:layout_width="320dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Todayâ€™s goal"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="28dp"
            android:layout_height="56dp">
            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="0dp"
                android:textColor="#FFAAB6C7"
                android:id="@+id/input"
                android:maxLength="5"
                android:inputType="number"
                android:digits="1234567890"
                android:textSize="14sp"
                android:paddingStart="12dp"
                android:textColorHint="#FFAAB6C7"
                android:hint="Today's drinking water goal?"
                android:layout_weight="1"
                android:backgroundTint="#FFE7F1FB"
                android:background="@drawable/cor12"
                android:layout_height="match_parent"></androidx.appcompat.widget.AppCompatEditText>

            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ML"
                android:textColor="#000"
                android:layout_marginStart="25dp"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginHorizontal="16dp"
            android:layout_width="match_parent"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="20dp"
            android:layout_height="48dp">
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/sto_btn"
                android:textColor="#FF141A1E"
                android:id="@+id/cancel"
                android:textStyle="bold"
                android:textSize="13sp"
                android:text="Cancel"
                android:textAllCaps="false"
                android:layout_height="match_parent"></androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/gr_btn"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="13sp"
                android:id="@+id/confirm"
                android:layout_marginStart="12dp"
                android:text="Confirm"
                android:textAllCaps="false"
                android:layout_height="match_parent"></androidx.appcompat.widget.AppCompatButton>
        </LinearLayout>




    </LinearLayout>



</FrameLayout>