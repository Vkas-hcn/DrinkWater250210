<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="#E9F2FB"
    tools:context=".ui.history.HistoryFragment">

    <TextView
        android:text="History"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#141A1E"
        android:gravity="center_vertical"
        android:paddingStart="20.5dp"
        android:layout_width="match_parent"
        android:layout_height="56dp"></TextView>
    
    <LinearLayout
        android:layout_marginTop="56dp"
        android:layout_marginHorizontal="20.5dp"
        android:layout_width="match_parent"
        android:layout_height="89dp"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_weight="1"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="16dp"
            android:layout_height="match_parent">

            <TextView
                android:text="Days"
                android:textSize="12sp"
                android:textColor="#5F6F87"
                android:textStyle="bold"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>

            <TextView
                android:id="@+id/days"
                android:text="100"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#5F6F87"
                android:layout_marginStart="16dp"
                android:layout_marginTop="47dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="16dp"
                android:src="@mipmap/his_icon_date2"
                android:layout_height="wrap_content"></ImageView>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="16dp"
            android:layout_height="match_parent">

            <TextView
                android:text="Average intake"
                android:textSize="12sp"
                android:textColor="#5F6F87"
                android:textStyle="bold"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>

            <TextView
                android:id="@+id/avg"
                android:text="100"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#5F6F87"
                android:layout_marginStart="16dp"
                android:layout_marginTop="47dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="16dp"
                android:src="@mipmap/his_icon_avg"
                android:layout_height="wrap_content"></ImageView>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <FrameLayout
        android:layout_marginTop="160dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:id="@+id/rv"
            android:layout_height="match_parent"></androidx.recyclerview.widget.RecyclerView>
    </FrameLayout>


</FrameLayout>