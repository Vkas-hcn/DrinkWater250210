<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    tools:background="#FFE9F2FB"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_height="wrap_content">
 
    <LinearLayout
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="6dp"
        android:backgroundTint="@color/white"
        android:background="@drawable/cor16"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="92dp">
        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:text="Time"
                android:layout_marginTop="12dp"
                android:textColor="#5F6F87"
                android:layout_gravity="center_horizontal"
                android:textSize="10sp"
                android:textStyle="bold"
                android:layout_height="wrap_content"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:text="14:20"
                android:id="@+id/time"
                android:layout_marginTop="36dp"
                android:textColor="#141A1E"
                android:layout_gravity="center_horizontal"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_height="wrap_content"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:text="Time"
                android:layout_marginTop="64dp"
                android:textColor="#5F6F87"
                android:layout_gravity="center_horizontal"
                android:textSize="10sp"
                android:textStyle="bold"
                android:layout_height="wrap_content"></TextView>
        </FrameLayout>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:text="You got"
                android:layout_marginTop="12dp"
                android:textColor="#5F6F87"
                android:layout_gravity="center_horizontal"
                android:textSize="10sp"
                android:textStyle="bold"
                android:layout_height="wrap_content"></TextView>

            <TextView
                android:layout_width="wrap_content"
                tools:text="200ml"
                android:id="@+id/vale"
                android:layout_marginTop="36dp"
                android:textColor="#141A1E"
                android:layout_gravity="center_horizontal"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_height="wrap_content"></TextView>

            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:layout_width="100dp"
                app:trackColor="#FFADE5FC"
                android:id="@+id/pg"
                app:trackCornerRadius="2dp"
                android:max="100"
                android:layout_marginTop="71dp"
                android:layout_gravity="center_horizontal"
                app:indicatorColor="#FF369FFF"
                android:layout_height="4dp"></com.google.android.material.progressindicator.LinearProgressIndicator>
        </FrameLayout>
    </LinearLayout>
</FrameLayout>